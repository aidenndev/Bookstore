@model IEnumerable<Book>

@{
    ViewData["Title"] = "List of Books";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>@Html.DisplayNameFor(book => book.Name)</th>
                    <th>@Html.DisplayNameFor(book => book.ReservedDate)</th>
                    <th>Tasks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="square" src="@book.PhotoURL" alt="@book.Name" style="max-width: 200px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => book.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => book.ReservedDate)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>